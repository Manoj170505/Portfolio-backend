// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // Ensure this matches your project structure
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Experience {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  company     String
  description String
  startDate   String // Changed to camelCase to match JS code
  endDate     String // Changed to camelCase to match JS code
}

model Project {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  image       String
  link        String
  github      String
}

model Skill {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  category String
  icon     String
  color    String
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

model About {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  skills      String
  description String
  image       String
}

model Social {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  instagram   String
  github      String
  linkedin    String
  pinterest   String
}